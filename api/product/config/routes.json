{
  "routes": [
    {
      "method": "POST",
      "path": "/order",
      "handler": "product.postOrder",
      "config": {
        "policies": ["decorator"]
      }
    },
    {
      "method": "GET",
      "path": "/order/detail",
      "handler": "product.getOrderDetail",
      "config": {
        "policies": ["decorator"]
      }
    },
    {
      "method": "PATCH",
      "path": "/order/refund/:order_code",
      "handler": "product.patchRefund",
      "config": {
        "policies": ["decorator"]
      }
    },
    {
      "method": "GET",
      "path": "/log",
      "handler": "product.getMyLog",
      "config": {
        "policies": ["decorator"]
      }
    }
  ]
}
